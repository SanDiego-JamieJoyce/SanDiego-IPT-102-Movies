@model List<MovieViewModel>

@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>San Diego</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: black;
            color: white;
        }

        .container-fluid {
            text-align: center;
            background-color: #add8e6;
            height: 120px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: black;
        }

        .movie-column {
            position: relative;
            background-size: contain;
            background-position: center;
            height: 450px; /* Adjust the height as needed */
            width: 100%;
            border-radius: 10px;
            margin-bottom: 20px;
            transition: transform 0.3s;
            margin: 10px;
            background-color: white;
        }

            .movie-column:hover {
                filter: grayscale(100%);
                transform: scale(1.1);
            }

        .movie-details {
            display: none;
            background: rgba(0, 0, 0, 0.7);
            padding: 10px;
            border-radius: 5px;
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
        }

        .movie-column:hover .movie-details {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .movie-details h3 {
            font-size: 32px;
            font-weight: bold;
            color: white;
            margin-bottom: 50px;
        }

        .movie-details p {
            margin: 10px 0;
            font-size: 20px;
            color: white;
        }

        .movie-details a {
            color: white;
            font-weight: bold;
            font-size: 20px;
        }

        .movie-details p.rating {
            color: yellow;
            font-size: 24px;
        }

        /* Add specific background images for each column */
        .column-0 {
            background-image: url("/Content/Image/titanic.jpg");
        }

        .column-1 {
            background-image: url("/Content/Image/inception.jpg");
        }

        .column-2 {
            background-image: url("/Content/Image/MA.jpg");
        }

        .column-3 {
            background-image: url("/Content/Image/talk.jpg");
        }

        .column-4 {
            background-image: url("/Content/Image/x.jpg");
        }

        .column-5 {
            background-image: url("/Content/Image/batman.jpg");
        }

        .column-6 {
            background-image: url("/Content/Image/babylon.jpg");
        }

        .column-7 {
            background-image: url("/Content/Image/menu.jpg");
        }

        .column-8 {
            background-image: url("/Content/Image/pearl.jpg");
        }

        .column-9 {
            background-image: url("/Content/Image/bar.jpg");
        }

        .column-10 {
            background-image: url("/Content/Image/te.jpg");
        }

        .column-11 {
            background-image: url("/Content/Image/soul.jpg");
        }

        .column-12 {
            background-image: url("/Content/Image/mank.jpg");
        }

        .column-13 {
            background-image: url("/Content/Image/joker.jpg");
        }

        .column-14 {
            background-image: url("/Content/Image/glass.jpg");
        }

        /* Include the styles for other columns if needed */
    </style>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <div class="container-fluid">
        <h1 style="color: black;">TONNIES</h1>
        <p style="color: black;">Welcome to Tonnies</p>
    </div>

    <div class="container mt-5">
        <div class="row row-cols-1 row-cols-md-4 g-4">
            @for (int i = 0; i < Model.Count; i++)
            {
                var movie = Model[i];
                <div class="col">
                    <div class="movie-column column-@i">
                        <div class="movie-details">
                            <h3>@movie.Name</h3>
                            <p class="rating">Rating: @movie.Rating</p>
                            <p><a href="/movies/getmovie/@movie.Id">Watch Trailer</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</body>
</html>
